{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "plugins": [{ "name": "typescript-plugin-css-modules" }],
        "esModuleInterop": true
    },
    "include": [
        "resources/frontend/**/*"
    ]
}
